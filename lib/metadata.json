{
  "listings": {
    "fields": {
      "address": {
        "dataType": "string",
        "options": "None"
      },
      "bathrooms": {
        "dataType": "number",
        "options": "None"
      },
      "bedrooms": {
        "dataType": "number",
        "options": "None"
      },
      "coordinates": {
        "dataType": "array",
        "arrayDataType": "number",
        "options": "None",
        "filterIncompatible": true
      },
      "currency": {
        "dataType": "string",
        "options": ["USD", "MXN"],
        "filterIncompatible": true
      },
      "description": {
        "dataType": "string",
        "options": "None",
        "filterIncompatible": true
      },
      "electricity": {
        "dataType": "boolean",
        "options": "None"
      },
      "houseSize": {
        "dataType": "number",
        "options": "None"
      },
      "houseSizeUnits": {
        "dataType": "string",
        "options": ["SQ.FT."]
      },
      "imageUrls": {
        "dataType": "array",
        "arrayDataType": "string",
        "options": "None",
        "filterIncompatible": true
      },
      "landArea": {
        "dataType": "number",
        "options": "None"
      },
      "landAreaUnits": {
        "dataType": "number",
        "options": ["ACRES"],
        "filterIncompatible": true
      },
      "listingType": {
        "dataType": "array",
        "options": ["LOTE", "CASA", "BODEGA"],
        "arrayDataType": "string"
      },
      "paymentType": {
        "dataType": "string",
        "options": "None"
      },
      "price": {
        "dataType": "number",
        "options": "None"
      },
      "title": {
        "dataType": "string",
        "options": "None",
        "filterIncompatible": true
      },
      "water": {
        "dataType": "boolean",
        "options": "None"
      }
    }
  },

  "filters": {
    "defaultOptions": {
      "id": {
        "type": "text",
        "required": true,
        "label": "Name"
      },
      "legend": {
        "type": "text",
        "required": false,
        "label": "Title"
      },
      "fieldKey": {
        "type": "select",
        "required": true,
        "options": "useWith",
        "label": "Compare Against..."
      },
      "fallback": {
        "type": "text",
        "required": true,
        "label": "Fallback"
      }
    },
    "ofType": {
      "NativeSelect": {
        "useWith": {
          "type": "array",
          "exclude": "",
          "only": ""
        },
        "defaultParameters": {
          "key": "",
          "name": "",
          "fallback": "Any",
          "type": "NativeSelect",
          "comparisonOperator": "===",
          "filterProps": {
            "data": ["Option1", "Option2", "Option3", "Any"]
          }
        }
      },
      "RangeSlider": {
        "useWith": {
            "type": "number"
        },
        "defaultFilterProps": {
          "min": 0,
          "max": 100,
          "step": 1,
          "labelAlwaysOn": false
        },
        "fallback": "{[defaultFilterProps.min, defaultFilterProps.max]}"
      },
      "SegmentedControl": {
        "useWith": {
            "only": ["bathrooms, bedrooms"]
        },
        "defaultFilterProps": {
          "data": [
            { "label": "1", "value": "1" },
            { "label": "2", "value": "2" },
            { "label": "3", "value": "3" },
            { "label": "4+", "value": ">=4" },
            { "label": "any", "value": "any" }
          ]
        }
      },
      "Checkbox": {
        "useWith": {
            "type": "boolean"
        },
        "defaultFilterProps": {
          "label": "Option"
        }
      },
      "ParentNode": {
        "defaultFilterProps": {
          "children": [
            {
              "name": "option1",
              "key": "{nextBoolean}",
              "filterProps": {
                "label": "{nextBoolean.replace(/^./, uppercase)}"
              }
            }
          ]
        }
      },
      "RadioButtonGroup": {
        "useWith": {
            "type": "array"
        },
        "defaultFilterProps": {
          "data": ["Option1", "Option2", "Option3", "Any"]
        }
      }
    }
  }
}
