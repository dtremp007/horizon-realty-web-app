{
  "filters": {
    "defaultOptions": {
      "id": {
        "type": "text",
        "label": "Name"
      },
      "fieldKey": {
        "type": "select",
        "data": "{getCompatibleFieldKeys}",
        "label": "Compare Against..."
      }
    },
    "RadioButtonGroup": {
      "useWith": {
        "type": "array"
      },
      "defaultFilterProps": {
        "data": ["Option1", "Option2", "Option3", "Any"]
      },
      "options": {
        "filterProps.data": {
          "type": "list",
          "listInputs": {
            "label": {
              "type": "text"
            },
            "value": {
              "type": "text"
            }
          }
        }
      }
    },
    "NativeSelect": {
      "useWith": {
        "type": "array",
        "exclude": "",
        "only": ""
      },
      "defaultParameters": {
        "key": "",
        "name": "",
        "fallback": "Any",
        "type": "NativeSelect",
        "comparisonOperator": "===",
        "filterProps": {
          "data": ["Option1", "Option2", "Option3", "Any"]
        }
      },
      "options": {}
    },
    "RangeSlider": {
      "useWith": {
        "type": "number"
      },
      "defaultFilterProps": {
        "min": 0,
        "max": 100,
        "step": 1,
        "labelAlwaysOn": false
      },
      "fallback": "{[defaultFilterProps.min, defaultFilterProps.max]}",
      "options": {
        "label": {
          "type": "select",
          "label": "Label",
          "data": [
            {
              "label": "Money ($)",
              "value": "(value) => { return `\\$${value.toLocaleString('en')}`;}"
            },
            {
              "label": "Squared Feet",
              "value": "(value) => { return `${value} piesÂ²`;}"
            },
            {
              "label": "Acres",
              "value": "(value) => { return `${value} ac.`;}"
            }
          ]
        },
        "min": {
          "type": "number",
          "label": "Start of range"
        },
        "max": {
          "type": "number",
          "label": "End of range"
        },
        "step": {
          "type": "number",
          "label": "Step by:"
        },
        "labelAlwaysOn": {
          "type": "checkbox",
          "label": "Label Always On"
        }
      }
    },
    "SegmentedControl": {
      "useWith": {
        "include": ["bathrooms", "bedrooms"]
      },
      "defaultFilterProps": {
        "data": [
          { "label": "1", "value": "1" },
          { "label": "2", "value": "2" },
          { "label": "3", "value": "3" },
          { "label": "4+", "value": ">=4" },
          { "label": "any", "value": "any" }
        ]
      },
      "options": {
        "data": {
          "type": "list",
          "listInputs": {
            "label": {
              "type": "text"
            },
            "value": {
              "type": "text"
            }
          }
        }
      }
    },
    "Checkbox": {
      "useWith": {
        "type": "boolean"
      },
      "defaultFilterProps": {
        "label": "Option"
      }
    },
    "CheckboxList": {
      "useWith": {
        "type": "boolean"
      },
      "defaultFilterProps": {
        "children": [
          {
            "name": "option1",
            "key": "{nextBoolean}",
            "filterProps": {
              "label": "{nextBoolean.replace(/^./, uppercase)}"
            }
          }
        ]
      },
      "options": {
        "children": {
          "type": "list",
          "listInputs": {
            "filterProps.label": {
              "type": "text"
            },
            "fieldKey": {
              "type": "text"
            }
          }
        }
      }
    }
  }
}
